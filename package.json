{
  "name": "bunshi",
  "description": "A tiny, fast, dependency-free 1.18kb library for creating jotai atoms in a way that lets you lift state up, or push state down.",
  "version": "0.0.1",
  "license": "MIT",
  "author": "ReferralSaaSquatch.com, Inc.",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:vanilla": "tsup src/vanilla/index.ts --outDir dist --format esm,cjs --dts",
    "build:react": "tsup src/react/index.ts --outDir dist/react --format esm,cjs --dts",
    "build:vue": "tsup src/vue/index.ts --outDir dist/vue --format esm,cjs --dts --external vue",
    "dev": "run-p dev:*",
    "dev:build": "run-p build -- --watch",
    "dev:test": "vitest --watch",
    "test": "run-s test:*",
    "test:code": "vitest run",
    "test:size": "size-limit"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "default": "./dist/react/index.js"
    },
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "import": "./dist/vue/index.mjs",
      "default": "./dist/vue/index.js"
    }
  },
  "peerDependencies": {
    "react": ">=16",
    "vue": ">=3"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {},
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "2 KB"
    },
    {
      "path": "dist/react/index.js",
      "limit": "2.1 KB"
    },
    {
      "path": "dist/vue/index.js",
      "limit": "2 KB"
    },
    {
      "path": "dist/index.mjs",
      "limit": "2 KB"
    }
  ],
  "devDependencies": {
    "@astrojs/language-server": "^2.3.3",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/vue": "^7.0.0",
    "@types/react": "*",
    "@vitejs/plugin-vue": "^4.2.3",
    "happy-dom": "^10.0.3",
    "husky": "^7.0.4",
    "jotai": "^2.4.2",
    "npm-run-all": "^4.1.5",
    "react": "*",
    "react-is": "*",
    "react-test-renderer": "*",
    "size-limit": "^7.0.8",
    "tslib": "^2.3.1",
    "tsup": "^7.1.0",
    "typescript": "^4.6.3",
    "vitest": "^0.33.0",
    "vue": "^3.3.4"
  }
}
