{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node.js: Debug TSDX Jest Tests (watch)",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/tsdx/dist/index.js",
        "test",
        "--runInBand",
        "--watch"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}
